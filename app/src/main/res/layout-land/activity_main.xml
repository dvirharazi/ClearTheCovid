<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_container"
    android:background="@drawable/mainbg">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/covid"
        android:id="@+id/covid1"/>

    <ImageView
        android:id="@+id/covid2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/covid1"
        android:scaleType="fitXY"
        android:src="@drawable/covid" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/covid"
        android:id="@+id/covid3"
        android:layout_toEndOf="@+id/covid2"
        android:layout_below="@+id/covid1"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/play"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_above="@+id/move_to_record"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/s_btn"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:text="@string/play"
        android:textAlignment="center"
        android:textColor="@color/black" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/move_to_record"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:background="@drawable/s_btn"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:text="@string/records"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/move_to_tutorial"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:layout_below="@id/move_to_record"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/s_btn"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:text="@string/guide"
        android:textAlignment="center"
        android:textColor="@color/black"/>

    <ImageButton

        android:id="@+id/music_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/btn_selector" />


    <FrameLayout
        android:id="@+id/fragment_containerplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp" />

</RelativeLayout>