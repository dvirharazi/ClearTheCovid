<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:background="@drawable/fragment_2"
        android:layout_centerInParent="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/move_to_fragment_3"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/img_1"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/s_btn"
        android:scaleType="fitXY"
        android:text="@string/next"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/img_enemy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/change_to_mask" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_on_infected"
        android:layout_below="@+id/arrow"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:layout_toStartOf="@+id/img_enemy"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/img_enemy"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/img_enemy"
        android:rotation="315"
        android:scaleType="fitXY"
        android:src="@drawable/s_btn_arrow" />


</RelativeLayout>