<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/set_title"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/music"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/set_music"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/set_title"
        android:layout_toStartOf="@+id/set_title"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_music"
        android:layout_toEndOf="@+id/set_music"
        android:layout_below="@+id/set_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guide"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/play_guide"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/set_music"
        android:layout_toStartOf="@+id/set_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_to_menu"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/back_to_menu"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/play_guide"
        android:layout_toStartOf="@+id/set_title"/>





</RelativeLayout>