<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/set_title"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="music: "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/set_music"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/set_title"
        android:layout_toStartOf="@+id/set_title"/>

    <Switch
        android:id="@+id/switch_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_title"
        android:layout_toEndOf="@+id/set_music" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="guide: "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/play_guide"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/set_music"
        android:layout_toStartOf="@+id/set_title"/>

</RelativeLayout>